<UserControl x:Class="Student_Management.CustomControls.BindablePasswordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Student_Management.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <PasswordBox x:Name="txPassword"
                             FontSize="14"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,2"
                             VerticalAlignment="Center"
                             Padding="40,5,0,5">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/Student_Management;component/Images/Password.png"
                                    Stretch="Uniform"
                                    AlignmentX="Left"
                                    Viewport="0,0,30,30"
                                    ViewportUnits="Absolute"
                                    TileMode="None" />
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
