<UserControl x:Class="Student_Management.View.StudentsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			
			 xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
			 xmlns:viewModel="clr-namespace:Student_Management.ViewModel"
			 xmlns:converters="clr-namespace:Student_Management.Converters" 
			 d:DataContext="{d:DesignInstance Type=viewModel:StudentsViewModel}"
			 mc:Ignorable="d" 
			 d:DesignHeight="650" d:DesignWidth="900"
			 Loaded="StudentsView_Loaded"
			 Unloaded="StudentsView_Unloaded">

	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../Style/TextBoxStyles.xaml"/>
				<ResourceDictionary Source="../Style/ComboBoxStyles.xaml"/>
				<ResourceDictionary Source="../Style/TextStyles.xaml"/>
			</ResourceDictionary.MergedDictionaries>
			<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
			<converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
			<converters:SemesterConverter x:Key="SemesterConverter"/>
		</ResourceDictionary>
	</UserControl.Resources>

	<!-- Main Grid -->
	<Grid Background="White">
		<!-- List View -->
		<Grid x:Name="ListViewGrid" 
			  Visibility="{Binding IsListVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- Top Toolbar with Search and Filters -->
			<Border Grid.Row="0" 
					Background="#F9F9F9" 
					Padding="15" 
					BorderThickness="0,0,0,1"
					BorderBrush="#E0E0E0">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>  <!-- Add button -->
						<ColumnDefinition Width="*"/>     <!-- Search box -->
						<ColumnDefinition Width="Auto"/>  <!-- Year Level filter -->
						<ColumnDefinition Width="Auto"/>  <!-- Year Type filter -->
						<ColumnDefinition Width="Auto"/>  <!-- Semester filter -->
					</Grid.ColumnDefinitions>

					<!-- Add Button -->
					<Button Grid.Column="0"
							Content="Add Student"
							Command="{Binding AddCommand}"
							Width="120"
							Height="36"
							Margin="0,0,15,0"
							Background="#8A2BE2"
							Foreground="White"
							FontWeight="SemiBold"
							BorderThickness="0">
						<Button.Resources>
							<Style TargetType="Border">
								<Setter Property="CornerRadius" Value="18"/>
							</Style>
						</Button.Resources>
						<Button.Style>
							<Style TargetType="Button">
								<Setter Property="Template">
									<Setter.Value>
										<ControlTemplate TargetType="Button">
											<Border Background="{TemplateBinding Background}"
													CornerRadius="18">
												<ContentPresenter VerticalAlignment="Center"
																HorizontalAlignment="Center"/>
											</Border>
										</ControlTemplate>
									</Setter.Value>
								</Setter>
								<Style.Triggers>
									<Trigger Property="IsMouseOver" Value="True">
										<Setter Property="Background" Value="#9D50BB"/>
									</Trigger>
								</Style.Triggers>
							</Style>
						</Button.Style>
					</Button>

					<!-- Search Box -->
					<Border Grid.Column="1" 
							Background="White" 
							CornerRadius="18" 
							Height="36" 
							Margin="0,0,15,0"
							BorderThickness="1"
							BorderBrush="#E0E0E0">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto"/>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="Auto"/>
							</Grid.ColumnDefinitions>
							
							<fa:IconImage Grid.Column="0" 
										 Icon="Search" 
										 Height="16" 
										 Width="16" 
										 Margin="15,0,5,0"
										 Foreground="#8A2BE2"/>
							
							<TextBox x:Name="SearchTextBox"
									 Grid.Column="1"
									 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
									 Background="Transparent"
									 BorderThickness="0"
									 FontWeight="Medium"
									 FontFamily="Segoe UI"
									 FontSize="14"
									 Foreground="#333333"
									 CaretBrush="#8A2BE2"
									 VerticalContentAlignment="Center"
									 Margin="5,0"/>
							
							<Button Grid.Column="2"
									Width="20"
									Height="20"
									Margin="5,0,10,0"
									Command="{Binding ClearSearchCommand}"
									Visibility="{Binding SearchText, Converter={StaticResource StringToVisibilityConverter}}">
								<Button.Style>
									<Style TargetType="Button">
										<Setter Property="Background" Value="Transparent"/>
										<Setter Property="BorderThickness" Value="0"/>
										<Setter Property="Template">
											<Setter.Value>
												<ControlTemplate TargetType="Button">
													<Border Background="{TemplateBinding Background}"
															CornerRadius="10">
														<fa:IconImage Icon="Xmark" 
																	Height="12" 
																	Width="12" 
																	Foreground="#8A2BE2"/>
													</Border>
												</ControlTemplate>
											</Setter.Value>
										</Setter>
										<Style.Triggers>
											<Trigger Property="IsMouseOver" Value="True">
												<Setter Property="Background" Value="#F0F0F0"/>
											</Trigger>
										</Style.Triggers>
									</Style>
								</Button.Style>
							</Button>
						</Grid>
					</Border>

					<!-- Year Level Filter -->
					<Border Grid.Column="2" 
							Background="White" 
							CornerRadius="18" 
							Height="36" 
							Width="140"
							Margin="0,0,10,0"
							BorderThickness="1"
							BorderBrush="#E0E0E0">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="Auto"/>
							</Grid.ColumnDefinitions>

							<ComboBox Grid.Column="0"
									 SelectedItem="{Binding SelectedYearLevel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
									 ItemsSource="{Binding YearLevels}" 
									 Style="{StaticResource ComboBoxStyles}">
							</ComboBox>
						</Grid>
					</Border>

					<!-- Year Type Filter -->
					<Border Grid.Column="3" 
							Background="White" 
							CornerRadius="18" 
							Height="36" 
							Width="140"
							Margin="0,0,10,0"
							BorderThickness="1"
							BorderBrush="#E0E0E0">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="Auto"/>
							</Grid.ColumnDefinitions>

							<ComboBox Grid.Column="0"
									 SelectedItem="{Binding SelectedYearType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
									 ItemsSource="{Binding YearTypes}" 
									 Style="{StaticResource ComboBoxStyles}">
							</ComboBox>
						</Grid>
					</Border>

					<!-- Semester Filter -->
					<Border Grid.Column="4" 
							Background="White" 
							CornerRadius="18" 
							Height="36" 
							Width="120"
							BorderThickness="1"
							BorderBrush="#E0E0E0">
						
							<ComboBox
									 SelectedItem="{Binding SelectedSemester, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
									 ItemsSource="{Binding SemesterOptions}" 
									 Style="{StaticResource ComboBoxStyles}">
								<ComboBox.ItemTemplate>
									<DataTemplate>
										<TextBlock Text="{Binding Converter={StaticResource SemesterConverter}}"/>
									</DataTemplate>
								</ComboBox.ItemTemplate>
							</ComboBox>
					</Border>
				</Grid>
			</Border>

			<!-- Students DataGrid -->
			<Border Grid.Row="1" 
					Margin="15" 
					Background="White" 
					CornerRadius="5" 
					BorderThickness="1" 
					BorderBrush="#E0E0E0">
				<DataGrid x:Name="StudentsDataGrid"
						  ItemsSource="{Binding Students}"
						  SelectedItem="{Binding SelectedStudent}"
						  IsReadOnly="True"
						  AutoGenerateColumns="False"
						  Background="White"
						  BorderThickness="0"
						  RowBackground="White"
						  AlternatingRowBackground="#F9F9F9"
						  GridLinesVisibility="Horizontal"
						  HeadersVisibility="Column"
						  CanUserResizeRows="False"
						  CanUserAddRows="False"
						  CanUserDeleteRows="False"
						  SelectionMode="Single"
						  SelectionUnit="FullRow"
						  Margin="5">

					<!-- DataGrid Styles -->
					<DataGrid.Resources>
						<Style TargetType="ScrollBar">
							<Setter Property="Background" Value="White"/>
							<Setter Property="Foreground" Value="#E0E0E0"/>
						</Style>
					</DataGrid.Resources>

					<!-- Column Header Style -->
					<DataGrid.ColumnHeaderStyle>
						<Style TargetType="DataGridColumnHeader">
							<Setter Property="Background" Value="#F9F9F9"/>
							<Setter Property="Foreground" Value="#333333"/>
							<Setter Property="Padding" Value="10,8"/>
							<Setter Property="FontFamily" Value="Segoe UI"/>
							<Setter Property="FontSize" Value="14"/>
							<Setter Property="FontWeight" Value="SemiBold"/>
							<Setter Property="BorderBrush" Value="#E0E0E0"/>
							<Setter Property="BorderThickness" Value="0,0,0,1"/>
							<Setter Property="HorizontalContentAlignment" Value="Left"/>
						</Style>
					</DataGrid.ColumnHeaderStyle>

					<!-- Cell Style -->
					<DataGrid.CellStyle>
						<Style TargetType="DataGridCell">
							<Setter Property="Foreground" Value="#333333"/>
							<Setter Property="FontFamily" Value="Segoe UI"/>
							<Setter Property="FontSize" Value="13"/>
							<Setter Property="Padding" Value="10,8"/>
							<Setter Property="BorderThickness" Value="0"/>
							<Setter Property="Background" Value="Transparent"/>
							<Style.Triggers>
								<Trigger Property="IsSelected" Value="True">
									<Setter Property="Background" Value="#E6D1FF"/>
									<Setter Property="Foreground" Value="#333333"/>
								</Trigger>
							</Style.Triggers>
						</Style>
					</DataGrid.CellStyle>

					<DataGrid.Columns>
						<DataGridTextColumn Binding="{Binding RollNo}" Header="Roll No" Width="70"/>
						<DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="125"/>
						<DataGridTextColumn Binding="{Binding YearLevel}" Header="Year Level" Width="85"/>
						<DataGridTextColumn Binding="{Binding YearType}" Header="Year Type" Width="80"/>
						<DataGridTextColumn Binding="{Binding Semester, Converter={StaticResource SemesterConverter}}" Header="Semester" Width="80"/>
						<DataGridTextColumn Binding="{Binding Phone}" Header="Phone" Width="100"/>
						<DataGridTextColumn Binding="{Binding Address}" Header="Address" Width="180"/>
					</DataGrid.Columns>
				</DataGrid>
			</Border>

			<!-- Action Buttons -->
			<Border Grid.Row="2" 
					Background="#F9F9F9" 
					Padding="15" 
					BorderThickness="0,1,0,0"
					BorderBrush="#E0E0E0">
				<StackPanel Orientation="Horizontal" 
							HorizontalAlignment="Right">
					<Button Content="Delete"
							Command="{Binding DeleteCommand}"
							Width="100"
							Height="36"
							Margin="0,0,10,0"
							Background="#FF5252"
							Foreground="White"
							FontWeight="SemiBold"
							BorderThickness="0"
							IsEnabled="{Binding IsStudentSelected}">
						<Button.Resources>
							<Style TargetType="Border">
								<Setter Property="CornerRadius" Value="18"/>
							</Style>
						</Button.Resources>
						<Button.Style>
							<Style TargetType="Button">
								<Setter Property="Template">
									<Setter.Value>
										<ControlTemplate TargetType="Button">
											<Border Height="36"
													CornerRadius="18"
													Background="{TemplateBinding Background}">
												<ContentPresenter VerticalAlignment="Center"
																HorizontalAlignment="Center"/>
											</Border>
										</ControlTemplate>
									</Setter.Value>
								</Setter>
								<Style.Triggers>
									<Trigger Property="IsMouseOver" Value="True">
										<Setter Property="Background" Value="#FF7373"/>
									</Trigger>
									<Trigger Property="IsEnabled" Value="False">
										<Setter Property="Background" Value="#CCCCCC"/>
										<Setter Property="Foreground" Value="#888888"/>
									</Trigger>
								</Style.Triggers>
							</Style>
						</Button.Style>
					</Button>
					<Button Content="Edit"
							Command="{Binding EditCommand}"
							Width="100"
							Height="36"
							Background="#8A2BE2"
							Foreground="White"
							FontWeight="SemiBold"
							BorderThickness="0"
							IsEnabled="{Binding IsStudentSelected}">
						<Button.Resources>
							<Style TargetType="Border">
								<Setter Property="CornerRadius" Value="18"/>
							</Style>
						</Button.Resources>
						<Button.Style>
							<Style TargetType="Button">
								<Setter Property="Template">
									<Setter.Value>
										<ControlTemplate TargetType="Button">
											<Border Height="36"
													CornerRadius="18"
													Background="{TemplateBinding Background}">
												<ContentPresenter VerticalAlignment="Center"
																HorizontalAlignment="Center"/>
											</Border>
										</ControlTemplate>
									</Setter.Value>
								</Setter>
								<Style.Triggers>
									<Trigger Property="IsMouseOver" Value="True">
										<Setter Property="Background" Value="#9D50BB"/>
									</Trigger>
									<Trigger Property="IsEnabled" Value="False">
										<Setter Property="Background" Value="#CCCCCC"/>
										<Setter Property="Foreground" Value="#888888"/>
									</Trigger>
								</Style.Triggers>
							</Style>
						</Button.Style>
					</Button>
				</StackPanel>
			</Border>
		</Grid>

		
	</Grid>
</UserControl>